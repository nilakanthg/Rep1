---
import { SITE } from '../config/site';
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/home/Hero.astro';
import About from '../components/home/About.astro';
import Menu from '../components/home/Menu.astro';
import Gallery from '../components/home/Gallery.astro';
import Contact from '../components/home/Contact.astro';
---

<BaseLayout
  title={SITE.title}
  description={SITE.description}
  type="website"
  jsonLd={{
    '@context': 'https://schema.org',
    '@type': 'Restaurant',
    name: SITE.name,
    description: SITE.description,
    url: new URL(Astro.url.pathname, SITE.url).toString(),
    sameAs: Object.values(SITE.socials),
    address: {
      "@type": "PostalAddress",
      "streetAddress": "124 Market Street",
      "addressLocality": "Culinary District",
      "addressRegion": "Metropolis"
    },
    servesCuisine: "Wood-fired",
    priceRange: "$$$"
  }}
>
  <Hero />
  <About />
  <Menu />
  <Gallery />
  <Contact />
</BaseLayout>
